<!--				<exclude>junit:junit</exclude>-->
<!--			</excludes>-->
			<includes>
				<!--other libraries-->
				<include>org.codehaus.groovy:groovy</include>
				<include>org.codehaus.groovy:groovy-json</include>
				<include>org.codehaus.groovy:groovy-jsr223</include>
